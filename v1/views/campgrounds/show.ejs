<%- include('../partials/header'); -%>


<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Source 1</li>
                <li class="list-group-item ">Source 2</li>
                <li class="list-group-item">Source 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= campground.image %>">
                <div class="caption-full">
                    <h4 class="pull-right"><%= campground.price %> rs./night</h4>
                    <h4><a><%= campground.name %></a></h4>
                    <p><%= campground.desc %></p>
                    <p>
                        <em>Submitted by <%= campground.author.username %></em>
                    </p>
                    <% if(currentUser && campground.author.id.equals(currentUser._id)){%>
                    <a class="btn btn-warning" href="/campgrounds/<%=campground._id%>/edit">EDIT</a>
                    <form  id="delete-form" action="/campgrounds/<%= campground._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                      <a class="btn btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Leave a review</a>
                </div>
                <hr>
                
                <%campground.comments.forEach(function(cmnt){%>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%=cmnt.author%></strong>
                            <span class="pull-right">10 days ago..</span>
                            <p><%=cmnt.text%></p>
                            <% if(currentUser && cmnt.author &&  cmnt.author.id.equals(currentUser._id)){%>
                                <a href="/campgrounds/<%=campground._id%>/comments/<%=cmnt._id%>/edit" class="btn btn-xs btn-warning">EDIT</a>
                                <form id="delete-form" action="/campgrounds/<%=campground._id%>/comments/<%=cmnt._id%>?_method=delete" method="POST">
                                        <input class="btn btn-xs btn-danger" type="submit" value="delete">
                                </form>
                            <% } %>
                        </div>
                    </div>
                <%});%>

            </div>
        </div>
    </div>
    
</div>

